<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtMonthlyRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/system_black"
        android:text="Monthly Rate"/>

    <TextView
        android:id="@+id/txtClientID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtMonthlyRate"
        android:layout_marginStart="15dp"
        android:textSize="@dimen/text_size_medium"
        android:text="Client ID"/>

    <TextView
        android:id="@+id/txtClientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/txtClientID"
        android:layout_marginStart="15dp"
        android:textSize="@dimen/text_size_small"
        android:text="Client Name"/>

    <Button
        android:id="@+id/buttonDeleteClient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@id/txtMonthlyRate"
        android:layout_alignBottom="@id/txtClientName"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/system_transparent"
        android:visibility="invisible"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/system_red"
        android:text="Delete"/>
</RelativeLayout>